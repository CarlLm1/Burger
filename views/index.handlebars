<h1>Eat-Da-Burgers!</h1>

<h2>Not Devoured!</h2>
<ul>
    {{#each burgers}}
    {{#if devoured}}
    {{> burger_name/burger_name-block devoured=false}}
    {{/if}}
    {{/each}}
</ul>

<h2>Add Burger</h2>
<form class="create-form">

    <div class="form-group">
        <label for="ca">Burger:</label>
        <input type="text" id="ca" name="burger_name">
    </div>

    <button type="submit">Add Burger</button>
</form>

<h2>Devoured</h2>
<ul>
    {{#each burgers}}
    {{#unless devoured}}
    {{> burger_name/burger_name-block devoured=true}}
    {{/unless}}
    {{/each}}
</ul>